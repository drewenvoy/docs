{
  "openapi": "3.1.0",
  "info": {
    "title": "Envoy Workflow Trigger API",
    "description": "API for triggering workflows in the Envoy staging environment.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://staging.tryenvoy.ai/api"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/workflows/{workflowid}/trigger": {
      "post": {
        "summary": "Trigger a workflow",
        "description": "Triggers the specified workflow using the provided workflow ID and payload data.",
        "parameters": [
          {
            "name": "workflowid",
            "in": "path",
            "description": "The unique ID of the workflow to trigger.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Payload to trigger the workflow",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "route_number": {
                    "type": "string",
                    "description": "Route number associated with the workflow."
                  },
                  "phone_number": {
                    "type": "string",
                    "description": "Phone number to associate with the workflow trigger. Must include country code (e.g., +1)."
                  }
                },
                "required": ["route_number", "phone_number"]
              },
              "example": {
                "route_number": "12345",
                "phone_number": "+15551234567"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Workflow triggered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "workflow_run_id": {
                      "type": "string",
                      "description": "ID of the newly triggered workflow run."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request or missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "message": { "type": "string" }
                  },
                  "example": {
                    "error": "BadRequest",
                    "message": "Missing or invalid parameters"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - missing or invalid bearer token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}